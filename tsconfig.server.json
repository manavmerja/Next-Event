{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./server",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false 
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "app", "components"]
}